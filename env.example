# Environment Configuration Example
# Copy this file to .env and adjust values as needed
# Usage: cp env.example .env  (or copy env.example .env on Windows)

# ===========================================
# Application Configuration
# ===========================================

# Base URL for the application under test
BASE_URL=https://www.google.com

# Test environment (dev, staging, production)
TEST_ENV=production

# ===========================================
# Browser Settings
# ===========================================

# Run tests in headless mode (true/false)
HEADLESS=true

# Slow down operations by specified milliseconds (0 for no delay)
SLOWMO=0

# ===========================================
# Timeout Settings (in milliseconds)
# ===========================================

# Default timeout for all operations
DEFAULT_TIMEOUT=30000

# Navigation timeout
NAVIGATION_TIMEOUT=30000

# ===========================================
# Screenshot and Video Settings
# ===========================================

# Capture screenshot on test failure (true/false)
SCREENSHOT_ON_FAILURE=true

# Record video on test failure (true/false)
VIDEO_ON_FAILURE=true

# ===========================================
# Test Data
# ===========================================

# Default search query for tests
DEFAULT_SEARCH_QUERY=Playwright automation

# ===========================================
# CI/CD Settings
# ===========================================

# Set to 'true' when running in CI environment
# This affects retry logic and parallel execution
# CI=true

